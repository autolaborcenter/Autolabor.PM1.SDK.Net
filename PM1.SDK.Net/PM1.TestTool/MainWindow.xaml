<Window x:Class="Autolabor.PM1.TestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autolabor.PM1.TestTool"
        mc:Ignorable="d"
        Title="Autolabor PM1 检测工具集" 
        MinHeight="400" MinWidth="500"
        Height="400" Width="800"
        FontSize="16">
    <Window.DataContext>
        <local:MainWindowContext Connected="False"/>
    </Window.DataContext>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Margin="8,4">
            <CheckBox Content="连接到串行口："
                      Click="CheckBox_Click"
                      IsChecked="{Binding Connected, Mode=OneWay}"
                      VerticalAlignment="Center"/>
            <ComboBox Name="SerialPortCombo"
                      DropDownOpened="ComboBox_DropDownOpened"
                      DropDownClosed="ComboBox_DropDownClosed"
                      IsEnabled="{Binding Disconnected, Mode=OneWay}"
                      Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" 
                    IsEnabled="{Binding Connected, Mode=OneWay}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="{Binding StateAreaBrush, Mode=OneWay}"
                    Margin="4,0">
            <RadioButton Content="正常" GroupName="State" 
                             IsChecked="{Binding IsUnlocked, Mode=OneWay}"
                             Click="Unlock_Click"
                             Margin="4"/>
            <RadioButton Content="锁定" GroupName="State" 
                             IsChecked="{Binding IsLocked, Mode=OneWay}"
                             Click="Lock_Click"
                             Margin="4"/>
            <RadioButton Content="异常" GroupName="State" 
                             IsChecked="{Binding IsError, Mode=OneWay}"
                             Margin="4"
                             IsEnabled="False"/>
        </StackPanel>
        <TabControl IsEnabled="{Binding Connected, Mode=OneWay}"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch">
            <TabControl.Resources>
                <Style x:Key="ActionControlHeader" TargetType="TextBlock">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="Grid.Row" Value="0"/>
                </Style>
                <Style x:Key="ProcessControlButtonStyle" TargetType="Control">
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="MaxHeight" Value="120"/>
                    <Setter Property="MaxWidth" Value="360"/>
                    <Setter Property="Grid.Column" Value="2"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="动作控制" IsSelected="true">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="120" MaxWidth="240"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="动作列表"
                               Style="{StaticResource ActionControlHeader}"/>
                    <TextBlock Text="动作设定" Grid.Column="1"
                               Style="{StaticResource ActionControlHeader}" />
                    <TextBlock Text="流程控制" Grid.Column="2"
                               Style="{StaticResource ActionControlHeader}" />

                    <ListView x:Name="ActionList"
                              Grid.Row="1" 
                              Grid.Column="0" 
                              Grid.RowSpan="2">
                    </ListView>

                    <ToggleButton Content="暂停"
                                  Checked="ToggleButton_Checked"
                                  Unchecked="ToggleButton_Unchecked"
                                  Style="{StaticResource ProcessControlButtonStyle}"
                                  Grid.Row="1"/>
                    <Button Content="终止" 
                            Style="{StaticResource ProcessControlButtonStyle}"
                            Grid.Row="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="连续控制">
            </TabItem>
            <TabItem Header="舵轮校准">
            </TabItem>
            <TabItem Header="参数标定">
            </TabItem>
            <TabItem Header="控制精度测试">
            </TabItem>
        </TabControl>
        <TextBlock Text="错误信息"
                   Margin="8,0,0,0" Grid.Row="2"
                   VerticalAlignment="Center"/>
        <Button Content="清除" Click="Clear_Error_Info"
                HorizontalAlignment="Right"
                Margin="0,0,4,0" Grid.Row="2"/>
        <TextBox Text="{Binding ErrorInfo, Mode=OneWay}"
                 Foreground="Red"
                 IsReadOnly="True" MaxLines="8"
                 Margin="8,0,4,0" Grid.Row="3"/>
        <StatusBar Grid.Row="4" FontSize="16">
            <StatusBarItem MinWidth="120" Margin ="8,0">
                <TextBlock Text="{Binding ConnectedTime, StringFormat=连接时间 {0} 秒, Mode=OneWay}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem Width="120" Margin ="8,0">
                <TextBlock Text="{Binding Odometry, StringFormat=位姿 ({0}), Mode=OneWay}"/>
            </StatusBarItem>
            <StatusBarItem>
                <Button Content="重置" Click="Odometry_Reset_Button_Click"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem Margin="8,0,0,0" 
                           HorizontalContentAlignment="Stretch"
                           VerticalContentAlignment="Stretch">
                <ProgressBar Value="{Binding Progress, Mode=OneWay}" 
                             Maximum="1"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
